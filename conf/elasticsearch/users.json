      },
      "username": {
        "type": "text",
        "analyzer": "ngram_analyzer",
        "search_analyzer": "standard"
      },
      "image": {
        "type": "text"
      },
      "followers": {
        "type": "long"
      },
      "id": {
        "type": "long"
      }
